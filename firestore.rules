rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access only to authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Students collection - only authenticated users can access
    match /students/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Fee structure collection - only authenticated users can access
    match /fee_structure/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Bills collection - only authenticated users can access
    match /bills/{document} {
      allow read, write: if request.auth != null;
    }
  }
}